@model ToDoMobile.Web.Models.ToDo
@{
    ViewBag.Title = "Create to-do";
}
@using (Html.BeginForm())
{
    <div class="ui-body ui-body-a">
        <div data-role="fieldcontain">
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div data-role="fieldcontain">
            <label for="priority">
                Priority</label>
            <input type="range" name="priority" id="priority" value="1" min="1" max="3" />
        </div>
    </div>
    <div data-role="controlgroup" data-type="horizontal">
        <input type="submit" value="Create" data-icon="plus" />
        <a href="/" data-role="button" data-icon="home" rel="external">Cancel</a>
    </div>
}
